<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PhotosFragmentTwo">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp">


        <ImageView
            android:id="@+id/picture1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia01"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/picture2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia02"
            app:layout_constraintTop_toTopOf="@+id/picture1"
            app:layout_constraintBottom_toBottomOf="@id/picture1"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/picture1"
            android:layout_marginLeft="10dp" />



        <ImageView
            android:id="@+id/picture3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia03"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picture1"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/picture1"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/picture1" />

        <ImageView
            android:id="@+id/picture4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia04"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picture2"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/picture2"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/picture2" />


        <ImageView
            android:id="@+id/picture5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia05"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picture3"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/picture3"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/picture3" />

        <ImageView
            android:id="@+id/picture6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/narnia06"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picture4"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/picture4"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/picture4" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/picture2"
            app:srcCompat="@drawable/line2" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>