<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PhotosFragmentTwo">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginRight="0dp">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineleftleft"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineleft"
            app:layout_constraintGuide_percent="0.35"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineright"
            app:layout_constraintGuide_percent="0.65"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinerightright"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinetoptop"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinetop"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinebottom"
            app:layout_constraintGuide_percent="0.45"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/picture3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/narnia03"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="@id/guidelinerightright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineright"
            app:layout_constraintTop_toTopOf="@+id/picture2"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/picture2" />

        <ImageView
            android:id="@+id/picture2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleft"
            app:srcCompat="@drawable/narnia02"
            app:layout_constraintTop_toTopOf="@+id/picture1"
            app:layout_constraintBottom_toBottomOf="@id/picture1"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/picture1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/narnia01"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineleft"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            app:layout_constraintBottom_toBottomOf="@id/guidelinetop"
            app:layout_constraintTop_toBottomOf="@id/guidelinetoptop" />

        <ImageView
            android:id="@+id/picture6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/narnia06"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="@id/guidelinerightright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineright"
            app:layout_constraintTop_toTopOf="@+id/picture5"
            app:layout_constraintBottom_toBottomOf="@+id/picture5" />

        <ImageView
            android:id="@+id/picture5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleft"
            app:srcCompat="@drawable/narnia05"
            app:layout_constraintTop_toTopOf="@+id/picture4"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/picture4" />

        <ImageView
            android:id="@+id/picture4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/narnia04"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@id/guidelinebottom"
            app:layout_constraintRight_toLeftOf="@+id/guidelineleft"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            app:layout_constraintTop_toBottomOf="@id/guidelinetop" />


        <ImageView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picture4"
            app:srcCompat="@drawable/line"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/picture_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/narnia_1"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/author_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Georgie\nHenley"
            android:textAllCaps="false"
            android:textDirection="locale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/title"
            app:layout_constraintRight_toRightOf="parent"
            tools:elegantTextHeight="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toRightOf="@+id/picture_1"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/picture_1"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/picture_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/narnia_2"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/picture_1" />

        <TextView
            android:id="@+id/author_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="William Peter \nMoseley"
            android:textAllCaps="false"
            android:textDirection="locale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/title"
            app:layout_constraintRight_toRightOf="parent"
            tools:elegantTextHeight="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toRightOf="@+id/picture_2"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/picture_2"
            android:layout_marginTop="10dp" />


        <ImageView
            android:id="@+id/picture_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/narnia_3"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/picture_2" />

        <TextView
            android:id="@+id/author_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Anna \nPopplewell"
            android:textAllCaps="false"
            android:textDirection="locale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/title"
            app:layout_constraintRight_toRightOf="parent"
            tools:elegantTextHeight="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toRightOf="@+id/picture_3"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/picture_3"
            android:layout_marginTop="10dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>