<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PhotosFragmentTwo">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginRight="0dp">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineleftleft"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineleft"
            app:layout_constraintGuide_percent="0.35"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineright"
            app:layout_constraintGuide_percent="0.65"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelinerightright"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="vertical"/>


        <ImageView
            android:id="@+id/picture3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/narnia03"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="@id/guidelinerightright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineright"
            app:layout_constraintTop_toTopOf="@+id/picture2"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/picture2" />

        <ImageView
            android:id="@+id/picture2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleft"
            app:srcCompat="@drawable/narnia02"
            app:layout_constraintTop_toTopOf="@+id/picture1"
            app:layout_constraintBottom_toBottomOf="@id/picture1"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/picture1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/narnia01"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineleft"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/picture6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/narnia06"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="@id/guidelinerightright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineright"
            app:layout_constraintTop_toTopOf="@+id/picture5"
            app:layout_constraintBottom_toBottomOf="@+id/picture5" />

        <ImageView
            android:id="@+id/picture5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineright"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleft"
            app:srcCompat="@drawable/narnia05"
            app:layout_constraintTop_toTopOf="@+id/picture4"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/picture4" />

        <ImageView
            android:id="@+id/picture4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/narnia04"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toLeftOf="@+id/guidelineleft"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineleftleft"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picture1" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/line"
            app:layout_constraintTop_toBottomOf="@+id/picture5"
            android:layout_marginTop="20dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>